@model TilausDbMVC.Models.Logins
@{
    ViewBag.Title = "Home Page";
}
<script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>

@*JQuery, joka suoritetaan aina, kun sivu latautuu*@
@section scripts {
    <script type="text/javascript">
        $(window).on('load', function () {
            if (@ViewBag.LoginError == 1) {
            $('#LoginRuutu').modal('show');
            }
            });
    </script>
}


<div class="jumbotron">
    <h1>Tilaus DB App</h1>
    <p class="lead">Tämä on Tilaus DB-sovelluksen working demo</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg"><img src="~/Icons/info-circle.svg" alt="ASP.NET" width="32" height="32" title="ASP.NET"> Learn more &raquo;</a></p>
    <p><a href="https://asp.net"><img src="~/Icons/mouse-fill.svg" alt="ASP.NET" width="32" height="32" title="ASP.NET"></a></p>


    @*FAS (Font Awesome) -ikonit *@

    <p><a href="https://asp.net" class="btn btn-primary btn-lg fas fa-car"> ASP.NET</a></p>
    <p><a href="https://asp.net" class="fas fa-car" title="ASP.NET"></a></p>
    <i class="fas fa-clock"></i>

    <p>Nyt on @DateTime.Now</p>
</div>

<img src="~/Icons/hourglass-top.svg" />
<img src="~/Icons/info-circle.svg" />

@*Modal -tyyppisen ikkunan avauspainike*@
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#LoginRuutu">Avaa Modal-ikkuna</button>

@*Modal -tyyppisen ikkunan koodiesimerkki*@
<div class="modal" id="LoginRuutu">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Kirjautuminen Tilaus Db:n-järjestelmään</h1>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("Authorize", "Home", FormMethod.Post, new { id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Login</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.LoginId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <label class="text-danger">
                            @Html.DisplayFor(model => model.LoginErrorMessage)
                        </label>
                    </div>
                }






                <div class="modal-footer">
                    <div>
                        <!---formin lähettävä button, joka ei kuitenkaan ole formin sisällä, mutta viittaa formn id:hen--->
                        <button type="submit" class="btn btn-primary" form="loginForm"><i class="fas fa-check"></i></button>

                        <!--kontrollerin kutsu url action-komennolla, jotta peruuttaminen johtaa alkutilanteeseen-->
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary" data-bs-dismiss="modal"><i class="fas fa-times"></i></a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
